<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             version="2.0">
   <persistence-unit name="pets">
       <class>au.com.cybersearch2.pp.v2.PetDataV2</class>
        <property name="JTA_database-name" value="people-and-pets.db"/>
        <property name="JTA_database-version" value="2"/>
        <property name="JTA_open-helper-callbacks-classname" 
                  value="au.com.cybersearch2.pp.v2.PetsOpenHelperCallbacks"/>
   </persistence-unit>
   <persistence-unit name="people">
       <class>au.com.cybersearch2.pp.v2.PersonDataV2</class>
       <property name="JTA_database-name" value="people-and-pets.db"/>
       <property name="JTA_database-version" value="2"/>
       <property name="JTA_open-helper-callbacks-classname" 
                 value="au.com.cybersearch2.pp.v2.PeopleOpenHelperCallbacks"/>
   </persistence-unit>
</persistence>
